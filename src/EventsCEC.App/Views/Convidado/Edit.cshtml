@model EventsCEC.Application.ViewModels.ConvidadoViewModel

<div class="row">
    <div class="col-md-12 gid-margin strecth-card">
        <div class="card">
            <div class="card-body">
                @if (Model.Id.HasValue)
                {
                    <h4 class="card-title">Editar Convidado</h4>
                }
                else
                {
                    <h4 class="card-title">Novo Convidado</h4>
                }

                <form asp-controller="Convidado" asp-action="Edit" method="post" class="form-horizontal">

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Telefone</label>
                        <div class="col-sm-10">
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Idade</label>
                        <div class="col-sm-10">
                            <input asp-for="Idade" class="form-control" />
                            <span asp-validation-for="Idade" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <div class="col-sm-1" style="position: relative;">
                            @Html.CheckBoxFor(model => model.Meia, new { @class = "middle-center" })
                            <span asp-validation-for="Meia" class="text-danger"></span>
                        </div>
                        <label for="Meia" class="col-sm-1 col-form-label">Meia</label>
                    </div>

                    <div class="mb-3 row">
                        <div class="col-sm-1" style="position: relative;">
                            @Html.CheckBoxFor(model => model.Pago, new { @class = "middle-center" })
                            <span asp-validation-for="Pago" class="text-danger"></span>
                        </div>
                        <label for="Pago" class="col-sm-1 col-form-label">Pago</label>
                    </div>

                    <div class="mb-3 row">
                        <div class="col-sm-11">
                            <select asp-for="EventoId" class="form-control" asp-items="ViewBag.EventoId">
                                <option value="" selected>Selecione um evento</option>
                            </select>
                            <span asp-validation-for="EventoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-1 d-grid">
                            <a asp-action="Index" class="btn btn-primary">Voltar</a>
                        </div>
                        <div class="col-md-9">
                        </div>
                        <div class="col-md-1 d-grid float-right">
                            <input type="submit" value="Salvar" class="btn btn-block btn-primary float-right">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
