@model EventsCEC.Application.ViewModels.EventoViewModel

<div class="row">
    <div class="col-md-12 gid-margin strecth-card">
        <div class="card">
            <div class="card-body">
                @if (Model.Id.HasValue)
                {
                    <h4 class="card-title mb-3">Editar Evento</h4>
                }
                else
                {
                    <h4 class="card-title mb-3">Novo Evento</h4>
                }
                <form asp-controller="Evento" asp-action="Edit" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Titulo</label>
                        <div class="col-sm-11">
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Descrição</label>
                        <div class="col-sm-11">
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label" style="padding-right:0 !important;">Valor Inteira</label>
                        <div class="col-sm-11">
                            <input asp-for="ValorInteira" class="form-control" />
                            <span asp-validation-for="ValorInteira" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="name" class="col-sm-1 col-form-label">Valor Meia</label>
                        <div class="col-sm-11">
                            <input asp-for="ValorMeia" class="form-control" />
                            <span asp-validation-for="ValorMeia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="name" class="col-lg-1 col-form-label" style="padding-right:0 !important;">Responsável</label>
                        <div class="col-sm-11">
                            <input asp-for="Responsaveis" class="form-control" />
                            <span asp-validation-for="Responsaveis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-1 d-grid">
                            <a asp-action="Index" class="btn btn-primary">Voltar</a>
                        </div>
                        <div class="col-md-10">
                        </div>
                        <div class="col-md-1 d-grid float-right">
                            <input type="submit" value="Salvar" class="btn btn-block btn-primary float-right">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
