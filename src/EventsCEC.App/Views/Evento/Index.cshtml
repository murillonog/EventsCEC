@model IEnumerable<EventsCEC.Application.ViewModels.EventoViewModel>

@{
    int contador = 0;
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h4 class="card-title">Categorias</h4>
            </div>
            <div class="col-2">
                <a asp-action="Edit" class="btn btn-primary float-right" role="button"><i class="ti-plus"></i> Novo</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="width:5%  !important;">#</th>
                                <th scope="col" style="width:20% !important;">Titulo</th>
                                <th scope="col" style="width:20% !important;">Descrição</th>
                                <th scope="col" style="width:20% !important;">Valor Inteira</th>
                                <th scope="col" style="width:20% !important;">Valor Meia</th>
                                <th scope="col" style="width:15% !important;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    contador++;
                                    <tr>
                                        <th scope="row">@contador</th>
                                        <td>@item.Titulo</td>
                                        <td>@item.Descricao</td>
                                        <td>@item.ValorInteira</td>
                                        <td>@item.ValorMeia</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" role="button">
                                                <i class="ti-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" role="button">
                                                <i class="ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" role="button">
                                                <i class="ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="text-center">
                                    <th class="text-center">
                                        Não foram encontradas categorias cadastradas
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>